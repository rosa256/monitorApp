<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/inputLeftRightMargin"
        android:layout_marginRight="@dimen/inputLeftRightMargin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:gravity="center_horizontal"
            android:text="Change Password"
            android:textSize="@dimen/inputTextSize"
            />

        <TextView
            android:id="@+id/change_password_informationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textAlignment="center"
            android:text="Enter your current and new password"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/change_password_current_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputTextSize"
            android:layout_marginTop="30dp"
            android:hint="@string/currentPasswordHint"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/change_password_new_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/passwordHint"
            android:textSize="@dimen/inputTextSize"
            android:layout_marginTop="@dimen/inputTopMargin"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/change_password_confirm_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputTextSize"
            android:layout_marginTop="@dimen/inputTopMargin"
            android:inputType="textPassword"
            android:hint="Confirm New Password"/>

        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:layout_marginTop="@dimen/inputTopMargin"
            android:text="Change password"
            android:layout_gravity="center"
            android:padding="16dp"/>




    </LinearLayout>
</android.support.constraint.ConstraintLayout>